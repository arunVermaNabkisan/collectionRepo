{
  "ConnectionStrings": {
    "CollectionManagementDB": "Server=YOUR_SERVER_NAME;Database=CollectionManagementDB;User Id=YOUR_USERNAME;Password=YOUR_PASSWORD;TrustServerCertificate=True;",
    "CollectionManagementDB_Azure": "Server=tcp:YOUR_AZURE_SERVER.database.windows.net,1433;Initial Catalog=CollectionManagementDB;Persist Security Info=False;User ID=YOUR_USERNAME;Password=YOUR_PASSWORD;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "ApplicationName": "NABKISAN Collection Management System",
    "Version": "1.0.0",
    "Environment": "Development"
  },
  "DatabaseSettings": {
    "CommandTimeout": 30,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 5
  }
}
