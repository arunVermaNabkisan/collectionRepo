@page "/payments"
@using CollectionManagementBlazor.Models
@inject HttpClient Http

<PageTitle>Payments</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Payment Transactions</h1>
        <p>Manage and track all payment transactions</p>
    </div>

    @if (payments == null)
    {
        <div class="text-center p-4">
            <div class="loading-spinner"></div>
            <p class="mt-3">Loading payments...</p>
        </div>
    }
    else if (!payments.Any())
    {
        <div class="alert-modern info">
            <h5>No Payments Found</h5>
            <p>No payment transactions are currently recorded in the system.</p>
        </div>
    }
    else
    {
        <!-- Dashboard Metrics -->
        <div class="dashboard-grid">
            <div class="metric-card success">
                <div class="metric-label">Total Payments Today</div>
                <div class="metric-value">@GetTotalPaymentsToday().ToString("C")</div>
                <span class="metric-change positive">@GetTodayPaymentCount() transactions</span>
            </div>
            <div class="metric-card info">
                <div class="metric-label">Total Revenue</div>
                <div class="metric-value">@GetTotalRevenue().ToString("C")</div>
                <span class="metric-change neutral">All time</span>
            </div>
            <div class="metric-card warning">
                <div class="metric-label">Pending Payments</div>
                <div class="metric-value">@GetPendingCount()</div>
                <span class="metric-change neutral">@GetPendingAmount().ToString("C")</span>
            </div>
            <div class="metric-card success">
                <div class="metric-label">Completed Today</div>
                <div class="metric-value">@GetCompletedTodayCount()</div>
                <span class="metric-change positive">@GetCompletedTodayAmount().ToString("C")</span>
            </div>
        </div>

        <!-- Payments Table -->
        <div class="data-table-container">
            <div class="table-header">
                <h3>All Transactions</h3>
                <div class="table-actions">
                    <input type="text" class="search-box" placeholder="Search transactions..." @bind="searchTerm" @bind:event="oninput" />
                    <button class="btn btn-modern btn-secondary">
                        <span class="oi oi-magnifying-glass"></span> Filter
                    </button>
                    <button class="btn btn-modern btn-success">
                        <span class="oi oi-plus"></span> Record New Payment
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>Transaction ID</th>
                            <th>Date & Time</th>
                            <th>Borrower</th>
                            <th>Account</th>
                            <th>Amount</th>
                            <th>Method</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in GetFilteredPayments())
                        {
                            <tr>
                                <td><strong>@payment.TransactionId</strong></td>
                                <td>@payment.PaymentDate.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>@payment.BorrowerName</td>
                                <td>@payment.AccountNumber</td>
                                <td><strong>@payment.Amount.ToString("C")</strong></td>
                                <td>@payment.PaymentMethod</td>
                                <td>
                                    <span class="modern-badge @GetStatusBadgeClass(payment.Status)">@payment.Status</span>
                                </td>
                                <td>
                                    <button class="btn btn-modern btn-sm btn-primary" @onclick="() => ShowReceiptDetails(payment)">
                                        <span class="oi oi-file"></span> View Receipt
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<!-- Receipt Details Modal -->
@if (showReceiptModal && selectedPayment != null)
{
    <div class="modal-overlay" @onclick="CloseReceiptModal">
        <div class="modal-dialog" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Payment Receipt</h3>
                <button class="modal-close" @onclick="CloseReceiptModal">
                    <span class="oi oi-x"></span>
                </button>
            </div>
            <div class="modal-body">
                <div class="receipt-container">
                    <div class="receipt-header">
                        <div class="receipt-logo">NABKISAN</div>
                        <div class="receipt-title">Payment Receipt</div>
                        <div class="receipt-id">@selectedPayment.TransactionId</div>
                    </div>

                    <div class="receipt-section">
                        <h4>Transaction Details</h4>
                        <div class="receipt-row">
                            <span class="receipt-label">Transaction ID:</span>
                            <span class="receipt-value">@selectedPayment.TransactionId</span>
                        </div>
                        <div class="receipt-row">
                            <span class="receipt-label">Date & Time:</span>
                            <span class="receipt-value">@selectedPayment.PaymentDate.ToString("MMMM dd, yyyy HH:mm:ss")</span>
                        </div>
                        <div class="receipt-row">
                            <span class="receipt-label">Status:</span>
                            <span class="modern-badge @GetStatusBadgeClass(selectedPayment.Status)">@selectedPayment.Status</span>
                        </div>
                    </div>

                    <div class="receipt-section">
                        <h4>Borrower Information</h4>
                        <div class="receipt-row">
                            <span class="receipt-label">Name:</span>
                            <span class="receipt-value">@selectedPayment.BorrowerName</span>
                        </div>
                        <div class="receipt-row">
                            <span class="receipt-label">Account Number:</span>
                            <span class="receipt-value">@selectedPayment.AccountNumber</span>
                        </div>
                    </div>

                    <div class="receipt-section">
                        <h4>Payment Information</h4>
                        <div class="receipt-row">
                            <span class="receipt-label">Payment Method:</span>
                            <span class="receipt-value">@selectedPayment.PaymentMethod</span>
                        </div>
                        <div class="receipt-row">
                            <span class="receipt-label">Amount Paid:</span>
                            <span class="receipt-value receipt-amount">@selectedPayment.Amount.ToString("C")</span>
                        </div>
                    </div>

                    <div class="receipt-footer">
                        <p>This is a computer-generated receipt and does not require a signature.</p>
                        <p class="receipt-note">For any queries, please contact our support team.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-modern btn-secondary" @onclick="CloseReceiptModal">Close</button>
                <button class="btn btn-modern btn-primary">
                    <span class="oi oi-print"></span> Print Receipt
                </button>
                <button class="btn btn-modern btn-success">
                    <span class="oi oi-data-transfer-download"></span> Download PDF
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<Payment> payments = new();
    private string searchTerm = string.Empty;
    private bool showReceiptModal = false;
    private Payment? selectedPayment = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Http.GetFromJsonAsync<ApiResponse<List<Payment>>>("api/payments");
            if (response?.Success == true && response.Data != null)
            {
                payments = response.Data;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading payments: {ex.Message}");
            payments = new List<Payment>();
        }
    }

    private List<Payment> GetFilteredPayments()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
            return payments;

        return payments.Where(p =>
            p.TransactionId.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            p.BorrowerName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            p.AccountNumber.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            p.PaymentMethod.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            p.Status.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
            .ToList();
    }

    private void ShowReceiptDetails(Payment payment)
    {
        selectedPayment = payment;
        showReceiptModal = true;
    }

    private void CloseReceiptModal()
    {
        showReceiptModal = false;
        selectedPayment = null;
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Success" or "Completed" => "success",
            "Pending" => "pending",
            "Failed" => "danger",
            "Refunded" => "info",
            _ => "info"
        };
    }

    private decimal GetTotalPaymentsToday()
    {
        return payments
            .Where(p => p.PaymentDate.Date == DateTime.Now.Date && (p.Status == "Completed" || p.Status == "Success"))
            .Sum(p => p.Amount);
    }

    private int GetTodayPaymentCount()
    {
        return payments.Count(p => p.PaymentDate.Date == DateTime.Now.Date);
    }

    private decimal GetTotalRevenue()
    {
        return payments
            .Where(p => p.Status == "Completed" || p.Status == "Success")
            .Sum(p => p.Amount);
    }

    private int GetPendingCount()
    {
        return payments.Count(p => p.Status == "Pending");
    }

    private decimal GetPendingAmount()
    {
        return payments
            .Where(p => p.Status == "Pending")
            .Sum(p => p.Amount);
    }

    private int GetCompletedTodayCount()
    {
        return payments.Count(p => p.PaymentDate.Date == DateTime.Now.Date && (p.Status == "Completed" || p.Status == "Success"));
    }

    private decimal GetCompletedTodayAmount()
    {
        return payments
            .Where(p => p.PaymentDate.Date == DateTime.Now.Date && (p.Status == "Completed" || p.Status == "Success"))
            .Sum(p => p.Amount);
    }

    private class Payment
    {
        public int Id { get; set; }
        public string TransactionId { get; set; } = string.Empty;
        public DateTime PaymentDate { get; set; }
        public string BorrowerName { get; set; } = string.Empty;
        public string AccountNumber { get; set; } = string.Empty;
        public decimal Amount { get; set; }
        public string PaymentMethod { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
    }

    private class ApiResponse<T>
    {
        public bool Success { get; set; }
        public string Message { get; set; } = string.Empty;
        public T? Data { get; set; }
    }
}
